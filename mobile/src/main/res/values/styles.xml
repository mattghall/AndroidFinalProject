<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DetailsLabels" parent="@android:style/TextAppearance">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="DetailsValue" parent="@android:style/TextAppearance">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#298A39</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="DetailsTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#0C65B6</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name= "AreaLabels" parent="@android:style/TextAppearance">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000080</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="AreaValue" parent="@android:style/TextAppearance">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000030</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="anchorLabel">

    </style>

    <style name="anchorValue">

    </style>

    <style name="anchorListViewCell">
        <item name="android:padding">10dp</item>
    </style>

    <style name="anchorBeta">
        <item name="android:textAlignment">textEnd</item>
    </style>

</resources>
